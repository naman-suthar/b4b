<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    style="@style/Widget.Material3.CardView.Filled">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_item_loading"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/airtel"
            android:id="@+id/img_logo_active_job"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_earning_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job_Title"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_earning_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_earn_from_task_history"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="\u20B9 50"/>
            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:id="@+id/btn_see_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_message_24"
                android:text="See"/>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>